{
  "manifest_version": 3,
  "name": "Leren Timer",
  "version": "1.0.0",
  "description": "Een 8-minuten timer overlay voor studygo.com, jojoschool.nl en quizlet.com",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Leren Timer - Stel je timer in"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.studygo.com/*",
        "*://leren.jojoschool.nl/*",
        "*://*.quizlet.com/*"
      ],
      "js": ["content.js"],
      "css": ["timer.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
